<div xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter" 
	class="recommendedTweet" data-tweet-id="${tweet.tweetId}" id="${clientId}" data-mode="summary"
	data-original-url="${tweet.url}" data-dirty="false" data-publish="${tweet.publish}">

	<form autocomplete="off">

		<div class="recommendedTweetSummaryView">
	
			<div class="tweetPublishColumn">
				<t:if test="tweet.publish">
					<input type="checkbox" class="publishTweet" id="publishTweet_${tweet.tweetId}" checked="checked"/>
				</t:if>
				<t:if test="!tweet.publish">
					<input type="checkbox" class="publishTweet" id="publishTweet_${tweet.tweetId}"/>
				</t:if>
			</div>
			
			<div class="tweetSummaryColumn">
				<div class="tweetText">
					<p>
						${tweet.summary}
					</p>
				</div>
				<div class="tweetUrl">
					<p title="${tweet.url}">
						${tweet.url}
					</p>
				</div>
			</div>
	
			<div class="tweetDetailColumn">
				<div class="tweetText">
					<textarea id="textarea_${tweet.tweetId}">${tweet.summary}</textarea>
				</div>
				<div class="tweetEditSecondRow">
					<p class="tweetCharacterCount">${tweet.summary.length()}</p>
					<ul class="tweetSuggestedHashtags">
						<li t:type="Loop" t:source="recommendedHashtags" t:value="var:hashtag" data-hashtag="${var:hashtag}">
							<a href="#">${var:hashtag}</a>
						</li>
					</ul>
					<p class="tweetAttachSnapshot">
						<span class="tweetAttachSnapshot">
							<img src="${asset:classpath:/com/sixbuilder/twitterlib/components/upload-page-red.gif}"/>
						</span>
						<t:if test="tweet.attachSnapshot">
							<input type="checkbox" class="tweetAttachSnapshotCheckbox" checked="checked"/>
						</t:if>
						<t:if test="!tweet.attachSnapshot">
							<input type="checkbox" class="tweetAttachSnapshotCheckbox"/>
						</t:if>
					</p>
				</div>
				<div class="tweetUrlRow">
					<input class="tweetUrl" type="text" value="${tweet.url}"/>
					<input class="tweetShortenUrl" type="submit" value="Shorten"/>
				</div>
			</div>
				
			<div class="tweetSnapshotColumn">
				<a href="${tweet.url}" target="_blank">
					<img src="${tweet.snapshotUrl}"/>
				</a>
				<div class="tweetActionButtons">
					<input class="tweetSave" type="submit" value="Save"/>
					<input class="tweetCancel" type="submit" value="Cancel"/>
				</div>
			</div>
	
			<div class="tweetDeleteLink">
				<a href="#" t:type="EventLink" t:event="delete" t:context="tweet.tweetId" t:zone="^">
					<img src="${asset:classpath:com/sixbuilder/twitterlib/components/closeButton.png}" height="25" width="25"/>
				</a>
			</div>
		
		</div>
		
	</form>

</div>
